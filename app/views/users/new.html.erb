<div class="content">
  <div id='email-form'>
    <h3>We need your email to complete the signup process</h3>
    <%= form_for @user do |f| %>

      <%= f.label :email %>
      <%= f.text_field :email %>
      <%= f.hidden_field :username %>

      <%= f.submit "Submit", class:'btn btn-primary' %>
    <% end %>
  </div>
</div>
